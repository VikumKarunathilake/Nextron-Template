{
  "compilerOptions": {
    // ---- General Settings ----
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["renderer/*"]
    }
  },
  "include": ["main", "renderer", "app", "resources"],
  "exclude": ["node_modules", "renderer/next.config.js", "dist"]
}
